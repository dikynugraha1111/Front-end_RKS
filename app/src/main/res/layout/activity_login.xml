<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/acopatPrimary">


    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:src="@drawable/closebutton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:layout_marginRight="23dp"
        />

    <LinearLayout
        android:id="@+id/konten"
        android:layout_width="300dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/bgkonten"
        android:elevation="4dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:text="AKSES DITOLAK"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Username atau Password Salah"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/overbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="3dp"
        android:background="@drawable/overbox"
        />

    <ImageView
        android:id="@+id/acopat_logo"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/acopatlogo"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acopat_logo"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#0A5445"
        app:cardCornerRadius="17dp">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_id"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="Usernmae/email..."
                android:textColor="#FFEBEE"
                android:textColorHint="#74FFEBEE"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView1"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#0A5445"
        app:cardCornerRadius="17dp">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="Password..."
                android:textColor="#FFEBEE"
                android:textColorHint="#74FFEBEE"
                android:textSize="14sp"
                android:inputType="textPassword"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:clickable="true">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Masuk"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btn_daftar"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? Silahkan Daftar"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        />


</RelativeLayout>