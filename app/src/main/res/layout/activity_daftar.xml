<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar"
    android:background="@color/acopatPrimary">

    <ImageView
        android:id="@+id/acopat_logo"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/acopatlogo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acopat_logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Masukan Nama"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A5445"
            app:cardCornerRadius="17dp">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_nama"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Nama..."
                    android:textColor="#FFEBEE"
                    android:textColorHint="#74FFEBEE"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Masukan Email"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A5445"
            app:cardCornerRadius="17dp">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_email"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Email..."
                    android:textColor="#FFEBEE"
                    android:textColorHint="#74FFEBEE"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Masukan Kelas"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A5445"
            app:cardCornerRadius="17dp">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_kelas"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Kelas..."
                    android:textColor="#FFEBEE"
                    android:textColorHint="#74FFEBEE"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Masukan Password"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A5445"
            app:cardCornerRadius="17dp">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_password"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Password..."
                    android:textColor="#FFEBEE"
                    android:textColorHint="#74FFEBEE"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Masukan Ulang Password"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0A5445"
            app:cardCornerRadius="17dp">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input_ulangpassword"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:hint="Paswword..."
                    android:textColor="#FFEBEE"
                    android:textColorHint="#74FFEBEE"
                    android:textSize="14sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_daftar_kirim"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="10dp"
            android:clickable="true">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="Daftar"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>